<div class="container" data-aos="fade-down">
    <div class="container" style="justify-content: center; display: flex; float: inline-start;
        align-items: center;">
        <img width="50px" style="padding-right: 10px;" src="/images/sparkle.png" alt="sparkle">
        <p class="title">BÁN CHẠY</p>
        <img width="50px" style="padding-left: 10px;" src="/images/sparkle.png" alt="sparkle">
    </div>
    <p class="subtitle">Những sản phẩm này đã được chính các khách hàng của chúng tôi lựa chọn và tin dùng.
        Bạn hãy xem thử nhé!</p>
    <div class="container" style="text-align: center;">
        <a style="background-color: #FFE09E; padding: 10px 30px; margin: 10px 0px 40px 0px;"
            class="btn btn-default btn-lg button-back color-5" href="/products/best-sellers" role="button">MUA NGAY</a>
    </div>
</div>

<div class="container" data-aos="fade-down">
    <div class="row row-cols-1 row-cols-md-4">
        <% if (bestSellerProducts) { %>
            <% bestSellerProducts.forEach((product) => { %>
                <% if (product.sale != 0) { %>
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <div class="container" style="text-align: center; margin-top: 20px;">
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <img src="/product_images/<%= product._id %>/<%= product.image %>" class="card-img" alt="...">
                                </a>
                            </div>
                            <div style="text-align: center;" class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <% var salePrice = product.salePrice.toLocaleString("vi", { style: "currency", currency: "VND", })%>
                                <% var price = product.price.toLocaleString("vi", { style: "currency", currency: "VND", })%>
                                <p class="original-price"><strike><%= price %></strike></p>
                                <p class="product-price"><%= salePrice %></p>
                                <a style="background-color: #51BCB1; padding: 10px 30px;" class="btn btn-default button-back color-1"
                                    href="/cart/add/<%= product.slug %>" role="button">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <div class="container" style="text-align: center; margin-top: 20px;">
                                <a href="/products/<%= product.category %>/<%= product.slug %>">
                                    <img src="/product_images/<%= product._id %>/<%= product.image %>" class="card-img" alt="...">
                                </a>
                            </div>
                            <div style="text-align: center;" class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <% var price = product.price.toLocaleString("vi", { style: "currency", currency: "VND", })%>
                                <br>
                                <p class="product-price"><%= price %></p>
                                <a style="background-color: #51BCB1; padding: 10px 30px;" class="btn btn-default button-back color-1"
                                    href="/cart/add/<%= product.slug %>" role="button">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        <% } %>
    </div>
</div>
