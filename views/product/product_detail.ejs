<% include ../partials/header %>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-12">
                <div id="custCarousel" class="carousel slide" data-ride="carousel" style="text-align: center;">
                    <!-- slides -->
                    <div class="carousel-inner">
                        <% galleryImages.forEach((image, index) => { %>
                            <% if (image != "thumbs") { %>
                                <% if (index == 0) { %>
                                    <div class="carousel-item active"> <img src="/product_images/<%= p._id %>/gallery/<%= image %>" alt="Product Image"> </div>
                                <% } else { %>
                                    <div class="carousel-item"> <img src="/product_images/<%= p._id %>/gallery/<%= image %>" alt="Product Image"> </div>
                                <% } %>
                            <% } %>
                        <% }); %>
                    </div> 
                    <!-- Left right --> <a class="carousel-control-prev" href="#custCarousel" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span> </a>
                    <a class="carousel-control-next" href="#custCarousel" data-slide="next"> 
                    <span class="carousel-control-next-icon"></span> </a> 
                    <!-- Thumbnails -->
                    <ol class="carousel-indicators list-inline" style="margin-bottom: 150px;">
                        <% galleryImages.forEach((image, index) => { %>
                            <% if (image != "thumbs") { %>
                                <% if (index == 0) { %>
                                    <li class="list-inline-item active"> 
                                        <a data-fancybox="gallery" id="carousel-selector-<%= index %>" class="selected" data-slide-to="<%= index %>" data-target="#custCarousel" href="/product_images/<%= p._id %>/gallery/<%= image %>"> 
                                            <img src="/product_images/<%= p._id %>/gallery/thumbs/<%= image %>" class="square"> 
                                        </a> 
                                    </li>
                                <% } else { %>
                                    <li class="list-inline-item"> 
                                        <a data-fancybox="gallery" id="carousel-selector-<%= index %>" data-slide-to="<%= index %>" data-target="#custCarousel" href="/product_images/<%= p._id %>/gallery/<%= image %>"> 
                                            <img src="/product_images/<%= p._id %>/gallery/thumbs/<%= image %>" class="square"> 
                                        </a> 
                                    </li>
                                <% } %>
                            <% } %>
                        <% }); %>
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-md-6" style="color: #5A8B8F;">
            <p style="color: #5A8B8F; text-transform: uppercase; font-weight: bold; font-size: x-large;"><%= p.name %></p>
            <p><%- p.desc %></p>
            <div class="container">
                <div class="row">
                    <p>Đánh giá</p>
                    <div class="star-rate" style="padding-left: 10px;">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <p style="padding-left: 20px;">37 nhận xét</p>
                </div>
            </div>
            
            <% if (p.totalQuantity == 0) { %>
                <div class="container" style="font-weight: bold;">
                    <div class="row">
                        <p>TÌNH TRẠNG : </p>
                        <p style="margin-left: 5px; color: #8a0f0f;">HẾT HÀNG</p>
                    </div>
                </div>
            <% } else { %>
                <div class="container" style="font-weight: bold;">
                    <div class="row">
                        <p>TÌNH TRẠNG : </p>
                        <p style="margin-left: 5px; color: #30BAC5;">CÒN HÀNG</p>
                    </div>
                </div>
            <% } %>
            
            <div class="container" style="font-weight: bold;font-size: larger;">
                <div class="row">
                    <p>GIÁ TIỀN : </p>
                    <p style="margin-left: 5px; color: #FF6E6E;"><%= parseInt(p.price).toLocaleString("vi", { style: "currency", currency: "VND", })%></p>
                </div>
            </div>

            <!-- <p style="padding: 0px; margin: 0px; font-weight: bold;">SỐ LƯỢNG : </p>
            <div class="number1">
                <span class="minus1">-</span>
                <input class="input1" type="number" value="1"/>
                <span class="plus1">+</span>
            </div> -->
            <div class="container" style="margin-top: 20px;">
                <div class="row">
                    <a href="#" style="background-color: #FFE682; color: #FF8001; font-weight: bold; margin-right: 10px;" class="btn btn-default btn-lg">MUA NGAY</a>
                    <a href="/cart/add/<%= p.slug %>" style="background-color: #FFE682; color: #FF8001; font-weight: bold;" class="btn btn-default btn-lg">THÊM VÀO GIỎ</a>
                </div>
            </div>

            <div class="container">
                <ul class="promise">
                    <li>Bảo hành 1 đổi 1 trong vòng 1 tháng.</li>
                    <li>Đổi trả trong vòng 1 tuần.</li>
                    <li>Tư vấn, chăm sóc khách hàng 24/24.</li>
                </ul>
            </div>

            <a href="/sales.html"><img src="/resources/img/gif2.gif" class="img-fluid" alt=""></a>
        </div>
    </div>
</div>

<div class="container">
    <p style="margin: 0px; font-size: x-large; color:#51BCB1; padding-bottom: 10px; text-transform: uppercase;">Những sản phẩm cùng danh mục :</p>
    <div class="row">
        <% cateProducts.forEach((product) => { %>
            <div class="col-md-3 mb-3">
                <div class="card h-100">
                  <div class="container" style="text-align: center; margin-top: 20px;">
                    <img src="/product_images/<%= product._id%>/<%= product.image %>" class="card-img" alt="...">
                  </div>
