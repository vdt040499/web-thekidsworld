<% include ../partials/header %>

<div class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <div class="form-card">
        <div class="row">
            <div class="col-md-4" style="align-self: center; text-align: center;">
                <img src="/images/logo.png" style="margin-bottom: 5px;" alt="">
                <div class="container" style="text-align: center;">
                    <p style="margin-bottom: 0px; color: rgb(136, 136, 136);">Bạn đã có tài khoản?</p>
                    <a href="signin.html" style="color: rgb(33, 181, 218);">Bấm vào đây để đăng nhập ngay!</a>
                </div>
            </div>
            <div class="col-md-8">
                <form action="/users/signup" class="signinform" novalidate method="POST">
                    <p style="text-align: center; color: rgb(117, 228, 222); font-size: 30px; font-weight: bold;">Đ Ă N
                        G K Ý</p>
                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="username">Tên đăng nhập</label>
                        <div class="col-sm-9">
                            <input type="text" style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" name="username"
                                class="form-control" id="username" value="<%= username %>" required>
                        </div>
                    </div>

                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="email">Email</label>
                        <div class="col-sm-9">
                            <input style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" type="email" name="email"
                                class="form-control" id="email" value="<%= email %>" required>
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="password">Mật khẩu</label>
                        <div class="col-sm-9">
                            <input style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" type="password"
                                name="password" class="form-control" id="password" value="" required>
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="repass">Nhập lại mật khẩu</label>
                        <div class="col-sm-9">
                            <input style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" type="password" name="repass"
                                class="form-control" id="repass" value="" required>
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="phone">Điện thoại:</label>
                        <div class="col-sm-9">
                            <input style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" type="text"
                                class="form-control" name="phone" id="phone" value="<%= phone %>">
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <label class="col-sm-3 col-form-label" for="address">Địa chỉ:</label>
                        <!-- <div class="col-sm-9">
                            <input style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;" type="text"
                                class="form-control" name="address" id="address" value="<%= address %>">
                        </div> -->
                    </div>
                    <div class="ml-5">
                        <div class="row mt-2 mx-2">
                            <label class="col-sm-3 col-form-label" for="address">Tỉnh/TP:</label>
                            <div class="col-sm-5">
                                <select name="province" id="province_select" class="form-control" style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;">
    
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2 mx-2">
                            <label class="col-sm-3 col-form-label" for="address">Quận/Huyện:</label>
                            <div class="col-sm-5">
                                <select name="district" id="district_select"  class="form-control" style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;">
    
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2 mx-2">
                            <label class="col-sm-3 col-form-label" for="address">Phường/Xã:</label>
                            <div class="col-sm-5">
                                <select name="ward" id="ward_select"  class="form-control" style="border: none; outline: none;
                                background: transparent; border-bottom: 1px solid black;">
    
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2 mx-2">
                            <label class="col-sm-3 col-form-label" for="phone">Số nhà, đường</label>
                            <div class="col-sm-9">
                                <input style="border: none; outline: none;
                                    background: transparent; border-bottom: 1px solid black;" type="text"
                                    class="form-control" name="address" id="address" value="<%= address %>">
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <button style="margin-top: 20px; text-align: center; background-color:rgb(117, 228, 222);
                        color: white; font-weight: bold; text-shadow: #D1FFFD;" class="btn btn-lg btn-block"
                            type="submit">ĐĂNG KÝ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/address.js"></script>

<% include ../partials/footer %>